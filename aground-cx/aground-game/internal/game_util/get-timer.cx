package util

type Timer struct {
  timer f64
  limit f64
}

func NewTimer(limit f64) (timer Timer) {
  timer.timer = 0.0D
  timer.limit = limit
}

func TimerOver(timer Timer, time f64) (over bool) {
  over = timer.limit <= f64.sub(time, timer.timer)
}

func TimerReset(timer Timer, time f64) (timer Timer) {
  timer.timer = time
}
