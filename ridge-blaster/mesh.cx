	printf("---m.Points[num].Y: %f \n", m.Points[num].Y)
	printf("---len(m.TriangleIndices): %d \n", len(m.TriangleIndices))
	
	num = i32.sub(len(EditLayers[CurrLayer].Points), 1)
	printf("---num: %d \n", num)
