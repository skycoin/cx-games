func makeAndReportOn (m Mesh2D, raw bool) () {
	if raw {
		printf("generating raw mesh:   %d   name: '%s' \n", len(RawMeshes), m.Name)
		RawMeshes = append(
		RawMeshes, m)
	} else {
		printf("generating sized mesh: %d   name: '%s' \n", len(SizedMeshes), m.Name)
		SizedMeshes = append(
		SizedMeshes, m)	
	}
}


