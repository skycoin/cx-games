func getValidId (layerId i32, removeId i32, j i32) (jOut i32) {
	jOut = EditLayers[layerId].TriangleIndices[j]

	// decrease vertex id by 1, if it's after removed index 
	if i32.gt(jOut, removeId) { // should never == removeId 
		jOut = i32.sub(jOut, 1)
	}
}
