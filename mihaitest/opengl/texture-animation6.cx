	gl.TexCoord2d(0.0, 0.0); 
	gl.Vertex3f(-1.0, 1.0, 0.0);
	gl.TexCoord2d(1.0, 0.0); 
	gl.Vertex3f(1.0, 1.0, 0.0);
	gl.TexCoord2d(1.0, 1.0); 
	gl.Vertex3f(1.0, -1.0, 0.0);
	gl.TexCoord2d(0.0, 1.0);
	gl.Vertex3f(-1.0, -1.0, 0.0);
		
	gl.End();
	//gl.Scalef(1.0, 1.0, 0.0)
	
}

